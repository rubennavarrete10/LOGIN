<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.login">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:requestLegacyExternalStorage="true"
        android:allowBackup="true"
        android:icon="@drawable/bitacore"
        android:label="BITACORE"
        android:roundIcon="@drawable/bitacore"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">



        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ginaga"></activity>
        <activity android:name=".terminos" />
        <activity android:name=".politicas" />
        <activity android:name=".registro" />
        <activity android:name=".olvidadocontrasena" />

        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan"></activity>

        <activity android:name=".configuraciones"></activity>

        <activity android:name=".area" />
        <activity
            android:name=".equipomedico"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".instrumental"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".inmobiliario"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".datosdialog"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".scaner"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden"/>
    </application>

</manifest>